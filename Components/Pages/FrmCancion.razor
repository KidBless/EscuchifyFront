@page "/canciones/nueva"
@page "/canciones/editar/{Id:int}"
@using escuchify_app.Components.Models
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Nueva Canción" : "Editar Canción")</PageTitle>

<h1>@(Id == 0 ? "Cargar Nueva Canción" : "Editar Canción")</h1>

@if (cargando)
{
    <p><em>Cargando datos...</em></p>
}
else if (listaDiscos == null || listaDiscos.Length == 0)
{
    <div class="alert alert-warning">
        No hay discos registrados. Primero debes crear un Disco para agregarle canciones.
        <br>
        <a href="/discos/nuevo" class="btn btn-warning mt-2">Ir a crear Disco</a>
    </div>
}
else
{
    <EditForm Model="cancion" OnValidSubmit="GuardarCancion">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Título</label>
            <InputText class="form-control" @bind-Value="cancion.Titulo" />
        </div>

        <div class="mb-3">
            <label class="form-label">Duración</label>
            <InputText class="form-control" @bind-Value="cancion.Duracion" placeholder="Ej: 3:45" />
        </div>

        <div class="mb-3">
            <label class="form-label">Género</label>
            <InputText class="form-control" @bind-Value="cancion.Genero" />
        </div>

        <div class="mb-3">
            <label class="form-label">Disco</label>
            <InputSelect class="form-select" @bind-Value="cancion.DiscoId">
                <option value="0">-- Selecciona un Disco --</option>
                @foreach (var disco in listaDiscos)
                {
                    <option value="@disco.Id">@disco.Titulo</option>
                }
            </InputSelect>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }
    
    [SupplyParameterFromForm]
    private Cancion cancion { get; set; } = new Cancion();

    private Disco[]? listaDiscos;
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 1. Cargar Discos para el selector
            listaDiscos = await HttpClient.GetFromJsonAsync<Disco[]>("api/Discos");

            // 2. Si es edición, cargar la canción
            if (Id > 0)
            {
                cancion = await HttpClient.GetFromJsonAsync<Cancion>($"api/Canciones/{Id}") ?? new Cancion();
            }
        }
        catch (Exception)
        {
            // Manejar error si es necesario
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task GuardarCancion()
    {
        HttpResponseMessage response;
        if (Id == 0)
        {
            response = await HttpClient.PostAsJsonAsync("api/Canciones", cancion);
        }
        else
        {
            response = await HttpClient.PutAsJsonAsync($"api/Canciones/{Id}", cancion);
        }

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/canciones");
        }
    }

    private void Cancelar() => NavigationManager.NavigateTo("/canciones");
}