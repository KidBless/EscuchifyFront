@page "/discos"
@using escuchify_app.Components.Models
@rendermode InteractiveServer
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Discos</PageTitle>

<h1>Discos</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/discos/nuevo">
        <span class="bi bi-plus-lg me-1"></span> Crear Nuevo Disco
    </a>
</div>

@if (!string.IsNullOrEmpty(mensajeError)) { <div class="alert alert-danger">@mensajeError</div> }

@if (discos == null)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else if (discos.Length == 0)
{
    <p><em>No hay discos cargados.</em></p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Portada</th>
                <th>Titulo</th>
                <th>Año</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Disco disco in discos)
            {
                <tr>
                    <td style="width: 80px;">
                        @if (!string.IsNullOrEmpty(disco.ImagenUrl))
                        {
                            <img src="@disco.ImagenUrl" alt="@disco.Titulo" class="rounded shadow-sm" style="width: 50px; height: 50px; object-fit: cover; border: 1px solid var(--purple-light);" />
                        }
                        else
                        {
                            <div class="rounded d-flex align-items-center justify-content-center bg-light text-secondary shadow-sm" style="width: 50px; height: 50px; border: 1px solid var(--purple-light);"><span class="bi bi-disc fs-4"></span></div>
                        }
                    </td>
                    <td class="fw-bold" style="color: var(--purple-dark);">@disco.Titulo</td>
                    <td>@disco.AnioLanzamiento</td>
                    <td><span class="badge bg-light text-dark border">@disco.TipoDisco</span></td>
                    <td>
                        <button class="btn btn-custom-edit btn-sm me-1" @onclick="() => EditarDisco(disco.Id)" title="Editar"><span class="bi bi-pencil-square"></span></button>
                        <button class="btn btn-custom-delete btn-sm" @onclick="() => EliminarDisco(disco.Id)" title="Eliminar"><span class="bi bi-trash-fill"></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Disco[]? discos;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await LoadDiscos();
    }

    private async Task LoadDiscos()
    {
        try
        {
            discos = await HttpClient.GetFromJsonAsync<Disco[]>("api/Discos");
            mensajeError = null;
        }
        catch (Exception ex) { mensajeError = $"Error al cargar: {ex.Message}"; }
    }

    private void EditarDisco(int id) => NavigationManager.NavigateTo($"/discos/editar/{id}");

    private async Task EliminarDisco(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "¿Eliminar este disco?"))
        {
            await HttpClient.DeleteAsync($"api/Discos/{id}");
            await LoadDiscos();
        }
    }
}