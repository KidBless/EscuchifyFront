@page "/artistas"
@using escuchify_app.Components.Models
@rendermode InteractiveServer
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Artistas</PageTitle>

<h1>Artistas</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/artistas/nuevo">
        <span class="bi bi-plus-lg me-1"></span> Crear Nuevo Artista
    </a>
</div>

@if (mensajeError != null)
{
    <div class="alert alert-danger">@mensajeError</div>
}

@if (artistas == null)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (artistas.Length == 0)
{
    <p><em>No hay artistas registrados.</em></p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre Artístico</th>
                <th>Nacionalidad</th>
                <th>Año Inicio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artista in artistas)
            {
                <tr>
                    <td style="width: 100px;">
                        @if (!string.IsNullOrEmpty(artista.ImagenUrl))
                        {
                            <img src="@artista.ImagenUrl" alt="@artista.NombreArtistico" 
                                 class="rounded-circle shadow-sm" 
                                 style="width: 60px; height: 60px; object-fit: cover; border: 2px solid var(--purple-light);" />
                        }
                        else
                        {
                            <div class="rounded-circle d-flex align-items-center justify-content-center bg-light text-secondary shadow-sm" 
                                 style="width: 60px; height: 60px; border: 2px solid var(--purple-light);">
                                <span class="bi bi-mic-fill fs-4"></span>
                            </div>
                        }
                    </td>

                    <td class="fw-bold" style="color: var(--purple-dark);">@artista.NombreArtistico</td>
                    <td>@artista.Nacionalidad</td>
                    <td>@artista.AnioInicio</td>
                    
                    <td>
                        <button class="btn btn-custom-edit btn-sm me-2" @onclick="() => Editar(artista.Id)" title="Editar">
                            <span class="bi bi-pencil-square"></span>
                        </button>
                        
                        <button class="btn btn-custom-delete btn-sm" @onclick="() => Eliminar(artista.Id)" title="Eliminar">
                            <span class="bi bi-trash-fill"></span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Artista[]? artistas;
    private string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await CargarArtistas();
    }

    private async Task CargarArtistas()
    {
        try
        {
            artistas = await HttpClient.GetFromJsonAsync<Artista[]>("api/Artistas");
            mensajeError = null;
        }
        catch (Exception ex)
        {
            mensajeError = $"Error al cargar: {ex.Message}";
        }
    }

    private void Editar(int id)
    {
        NavigationManager.NavigateTo($"/artistas/editar/{id}");
    }

    private async Task Eliminar(int id)
    {
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", 
            "¿Seguro que deseas eliminar este artista? \n\nNota: Si tiene discos asociados, la operación podría fallar.");
        
        if (confirmado)
        {
            var response = await HttpClient.DeleteAsync($"api/Artistas/{id}");
            if (response.IsSuccessStatusCode)
            {
                await CargarArtistas(); 
            }
            else
            {
                mensajeError = "No se pudo eliminar el artista. Verifique que no tenga discos asociados.";
            }
        }
    }
}