@page "/artistas/nuevo"
@page "/artistas/editar/{Id:int}"
@using escuchify_app.Components.Models
@using System.Text.Json
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>@(Id == 0 ? "Nuevo Artista" : "Editar Artista")</PageTitle>

<h1>@(Id == 0 ? "Crear Nuevo Artista" : "Editar Artista")</h1>

@if (artista == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <EditForm Model="artista" OnValidSubmit="GuardarArtista">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row">
            <div class="col-md-8">
                
                <div class="mb-3">
                    <label class="form-label">Nombre Art칤stico</label>
                    <div class="input-group">
                        <InputText class="form-control" @bind-Value="artista.NombreArtistico" placeholder="Ej: Adele" />
                        <button type="button" class="btn btn-info" @onclick="BuscarFotoAuto">
                            <span class="bi bi-search"></span> Buscar Foto
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nombre Completo</label>
                    <InputText class="form-control" @bind-Value="artista.NombreCompleto" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">A침o de Inicio</label>
                        <InputNumber class="form-control" @bind-Value="artista.AnioInicio" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nacionalidad</label>
                        <InputText class="form-control" @bind-Value="artista.Nacionalidad" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Discogr치fica</label>
                    <InputText class="form-control" @bind-Value="artista.Discografica" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label text-muted small">URL de Imagen (Autom치tica)</label>
                    <InputText class="form-control form-control-sm" @bind-Value="artista.ImagenUrl" />
                </div>

            </div>

            <div class="col-md-4 d-flex align-items-center justify-content-center">
                <div class="card shadow-sm p-2" style="width: 100%; max-width: 300px;">
                    <div class="card-body text-center">
                        <h6 class="card-subtitle mb-2 text-muted">Vista Previa</h6>
                        
                        @if (!string.IsNullOrEmpty(artista.ImagenUrl))
                        {
                            <img src="@artista.ImagenUrl" class="img-fluid rounded" 
                                 style="max-height: 250px; object-fit: cover;" 
                                 alt="Vista previa" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                 style="height: 200px; border: 2px dashed #ccc;">
                                <span class="text-muted">Sin Imagen</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public int Id { get; set; }
    
    [SupplyParameterFromForm]
    private Artista? artista { get; set; }

    // Clase auxiliar para leer la respuesta JSON del endpoint nuevo
    private class ImagenResponse { public string Url { get; set; } = ""; }

    protected override async Task OnInitializedAsync()
    {
        if (Id == 0)
        {
            artista = new Artista(); 
        }
        else
        {
            try 
            {
                artista = await HttpClient.GetFromJsonAsync<Artista>($"api/Artistas/{Id}");
            }
            catch
            {
                NavigationManager.NavigateTo("/artistas");
            }
        }
    }

    // 游녢 M칄TODO NUEVO: Llama al endpoint de b칰squeda sin guardar
    private async Task BuscarFotoAuto()
    {
        if (artista == null || string.IsNullOrWhiteSpace(artista.NombreArtistico)) return;

        try
        {
            // Llamamos al endpoint nuevo que creamos en el backend
            var response = await HttpClient.GetAsync($"api/Artistas/buscar-imagen?nombre={artista.NombreArtistico}");
            
            if (response.IsSuccessStatusCode)
            {
                var resultado = await response.Content.ReadFromJsonAsync<ImagenResponse>();
                if (resultado != null)
                {
                    artista.ImagenUrl = resultado.Url;
                    // Forzamos actualizaci칩n de la interfaz
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error buscando imagen: {ex.Message}");
        }
    }

    private async Task GuardarArtista()
    {
        HttpResponseMessage response;
        if (Id == 0)
        {
            response = await HttpClient.PostAsJsonAsync("api/Artistas", artista);
        }
        else
        {
            response = await HttpClient.PutAsJsonAsync($"api/Artistas/{Id}", artista);
        }

        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/artistas");
        }
    }

    private void Cancelar() => NavigationManager.NavigateTo("/artistas");
}